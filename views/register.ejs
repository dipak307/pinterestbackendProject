<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-zinc-300 bg-[url('https://img.freepik.com/premium-photo/top-view-office-desk-with-office-tools-computer-laptop-wood-table-background-with-copy-space-generative-ai_3535-3556.jpg')] flex items-center justify-center">
    <div class="w-[30vw] h-[75vh] bg-white px-20 py-10  rounded-md"> 
      <h1 class="text-2xl tracking-tighter mb-5 capitalize text-center font-semibold text-zinc-700 leading-none">Create New Account</h1>
      <form action="/register" method="post" >
        <input class="border-2 rounded-full block w-full mt-2 px-3 py-2 " type="text" name="username" placeholder="enter your Username" >
        <input class="border-2 rounded-full block w-full mt-2 px-3 py-2 " type="text" name="name" placeholder="Enter you name">
        <input class="border-2 rounded-full block w-full mt-2 px-3 py-2 " type="email" name="email" placeholder="Enter you Email">
        <input class="border-2 rounded-full block w-full mt-2 px-3 py-2 " type="number" name="contact" placeholder="Enter you contact">
        <input class="border-2 rounded-full block w-full mt-2 px-3 py-2 " type="password" name="password" placeholder="enter your password">
        <input class="border-2 rounded-full block w-full mt-2 px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Create Account">
       <p class="text-xs font-semibold text-zinc-700 mt-2 text-center" >By continuing, you agree to Pinterest's Terms of condition</p>
    </form>
    <a href="/" class="inline-block mt-7 text-sm font-semibold text-zinc-700 text-center w-full">Have an Account, Log In</a>
    </div>
</div>
<% include ./partials/footer.ejs %>